{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "baseUrl": "./",
    "lib": ["ES2022", "ESNext", "dom"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "types": ["node", "jest"],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "stripInternal": true
  }
}
